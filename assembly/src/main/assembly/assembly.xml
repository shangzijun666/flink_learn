<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>dist</id>
    <formats>
        <format>dir</format>
        <!--<format>tar.gz</format>-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.parent.basedir}/</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/docs</directory>
            <outputDirectory>/docs</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>**/tmp/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/lib</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/flink-cep/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/flink-cep/target/lib/</directory>
            <outputDirectory>/dependency-lib</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/flink-core/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/external-library/elasticsearch-shade/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/external-library/flink-datalake/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/external-library/flink-monitor/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/flink-core/target/lib/</directory>
            <outputDirectory>/dependency-lib</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/resources/target/resources/conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/resources/file</directory>
            <outputDirectory>/resources/file</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.parent.basedir}/flink-util/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>


        <fileSet>
            <directory>${project.parent.basedir}/flink-sql/target/</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/sbin/main</directory>
            <outputDirectory>/sbin/main</outputDirectory>
            <includes>
                <include>**/*.py</include>
                <include>**/*.sh</include>
                <include>**/*.r</include>
                <include>**/*.model</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>